<%= form_with model: @article, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :description %> 
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="article_author_id">Author:</label>
      <%= f.collection_select :author_id, Author.all, :id, :name, :prompt => "Select a Author",class:'form-control',:required => true %>
  </div>
  <div class="form-group">
    <label for="article_category_id">Category:</label>
    <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "Select a Category",class:'form-control',:required => true %>
  </div>
  <div class="form-group">
    <label for="article_tag_id">Tag:</label>
    <%= f.collection_select :tag_id, Tag.all, :id, :name, :prompt => "Select a Tag",class:'form-control',:required => true %><br>
  </div>
 <!--  <div class="form-group">
    <label for="article_tag_id">Select tags:</label>
    <%= check_box_tag(:tag) %>
    <%= label_tag(:tag, "food") %>
    <%= check_box_tag(:tag) %>
    <%= label_tag(:tag, "music") %>
    <%= check_box_tag(:tag) %>
    <%= label_tag(:tag, "joy") %><br>
    <%= check_box_tag(:tag) %>
    <%= label_tag(:tag, "fun") %>
  </div> -->
  <div class="form-group">
   <%= f.label :image %> 
    <%= f.file_field :image%>
     <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %> 
    <% end %> 
  </div>
  <div class="form-group">
    <%= link_to 'Back', articles_path, class: 'btn btn-warning btn-sm pull-left' %>
    <%= f.submit 'Save',class:'btn btn-success btn-sm pull-right' %>
  </div>
<% end %>       