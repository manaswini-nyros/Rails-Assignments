<%= form_with model:@article,local:true do |form| %>
  <div class="form-group">
    <%= form.label :Name %>
    <%= form.text_field :name,{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :Category %>
    <%= form.select :category, [["action","action"], ["horror","horror"], ["Adventure","Adventure"], ["Kids","Kids"], ["Funny","Funny"], ["tech","tech"], ["Love","Love"]], { prompt: "Select..." }, { class: "form-control", required: true } %>
  </div>
  <div class="form-group">
    <%= form.label :Description %>
    <%= form.text_area :description,{:class=>"form-control"} %>
  </div>
  <div class="form-group">
   <%= form.label :upload %>
   <%= form.file_field :attachment %>  
  </div>
  <div class="form-group">
   <%= check_box_tag(:is_published) %>
   <%= label_tag(:is_published, "Is published") %>
  </div>
  <div class="form-group">
    <%= form.submit"Save", class: "btn btn-success" %>
    <%= link_to 'Back', articles_path,class:"btn btn-warning" %>
  </div>
<% end %>
     
     
 

