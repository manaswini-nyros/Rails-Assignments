<div class="container my_card">
  <div class="table-responsive">
    <div class="table-bordered">
      <div class="card my_table">
        <div class="card-header my_header">
          <a class="btn btn-primary btn-sm my_article" href="#" role="button"><b>Articles</b></a>
        </div>
        <hr>
        <div class="card-body">
    <%= link_to 'New article', new_article_path, class: 'btn  my_newarticle' %><br> 
<!--         <p><%= @all_articles_count %>articles in total</p> -->
          <table class="table table-bordered my_newtable">
            <thead class="thead-light">
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Tag</th>
                <th>Author</th>
               
                <!-- <th>Status</th> -->
               <!--  <th colspan="3" >Actions</th> -->
              </tr>
            </thead>
            <tbody>
              <% @articles.each do |article| %>
                <tr>
                  <td><%= link_to article.name, article_path(article) %></td>
                  <td><%= article.description%> <%= link_to 'View', article_path(article), class: 'btn  btn-sm my_view' %>
                    <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning btn-sm' %>
                    <%= link_to 'Delete', '#',{:class=>"btn btn-danger btn-sm", "data-toggle"=>"modal", "data-target" => "#delete-#{article.id}"} %>
                      <div class="modal fade" id="delete-<%= article.id %>">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5><strong>Confirmation Box</strong>
                              <a class="close" data-dismiss="modal">Ã—</a>
                            </div>
                            <div class="modal-body">
                              <h5>Are you sure to delete this article?</h5>
                            </div>
                            <div class="modal-footer">
                              <%= link_to 'No', articles_path,{:class=>'btn btn-default btn-sm'} %>
                              <%= link_to 'Yes', article_path(article), method: :delete, :class => 'btn btn-danger btn-sm' %>
                            </div>
                          </div>
                        </div>
                      </div></td>
                  <td><%= article.category_id %></td>
                  <td><%= article.tag_id %></td>
                  <td><%= article.author_id %></td>
                  
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>